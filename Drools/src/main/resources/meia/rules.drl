package org.meia;
// package must be defined in packages from kmodule.xml file

//list any import classes here.
import org.meia.model.InitialConclusion;
import org.meia.model.Quiz;
import org.meia.model.Question;
import org.meia.model.Hypothesis;

//declare any global variables here


query "InitialConclusions"
	$initialConclusion : InitialConclusion()
end

//Criação de hipoteses para identificar se estamos no quizInitial ou no quiz40
rule "Verificar existencia quiz inicial"
when
    Quiz(QuizInitial !=null)
then
    Hypothesis h = new Hypothesis("Initial");
    System.out.println("hey");
    insert(h);
end


//Criação de regras para o quizInitial

rule "r1_Initial"
    when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 41, answer == "Sim") from $q.getQuizInitial()
    then
        InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_SECONDARY_FACTOR);
        insert(c);

end

rule "r2_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 42, answer == "Não") from $q.getQuizInitial()
     then
        InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_AS_NORMAL_FACTOR);
        insert(c);
 end

rule "r3_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 3, answer == "Não") from $q.getQuizInitial()
     then
        InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_AS_NORMAL_FACTOR);
        insert(c);
        System.out.println("Conclusion:"+c);
end

rule "r4_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 44, answer < "3") from $q.getQuizInitial()
     then
        InitialConclusion c = new InitialConclusion(InitialConclusion.CHECK_THE_DOCTOR);
        insert(c);
end

rule "r5_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 45, answer == "Sim") from $q.getQuizInitial()
     then
        InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_SECONDARY_FACTOR);
        insert(c);
end

rule "r6_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 5, answer == "Não") from $q.getQuizInitial()
     then
       InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_AS_NORMAL_FACTOR);
        insert(c);
        System.out.println("Conclusion:"+c);
end

rule "r7_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id ==45, answer == "Sim") from $q.getQuizInitial()
     then
        InitialConclusion c = new InitialConclusion(InitialConclusion.ANXIETY_MEDS_FACTOR);
        insert(c);
end

rule "Inicio do quiz40"
	when
		not InitialConclusion()
	then
		InitialConclusion c = new InitialConclusion(InitialConclusion.START_QUIZ40);
		insert(c);
end

