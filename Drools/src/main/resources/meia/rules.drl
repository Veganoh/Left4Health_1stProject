package org.meia;
// package must be defined in packages from kmodule.xml file

//list any import classes here.
import org.meia.model.Conclusion;
import org.meia.model.Quiz;
import org.meia.model.Question;
import org.meia.model.QuestionCategory
import org.meia.model.Hypothesis;

//declare any global variables here


query "Conclusions"
	$conclusion : Conclusion()
end

//Criação de hipoteses para identificar se estamos no quizInitial ou no quiz40
rule "Verificar existencia quiz inicial"
when
    Quiz(Quiz40==null)
then
    Hypothesis h = new Hypothesis("Initial");
    insert(h);
end

rule "Verificar existência do quiz 40"
when
    Quiz(Quiz40!=null)
then
    Hypothesis h = new Hypothesis("quiz40");
    insert(h);
end

//Criação de regras para o quizInitial



rule "r1_Initial"
    when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 1, answer == "Sim") from $q.getQuizInitial()
    then
        Conclusion c = new Conclusion(Conclusion.ANXIETY_SECONDARY_FACTOR);
        insert(c);
        System.out.println("Conclusion:"+c);

end

rule "r2_Initial"
     when
        Hypothesis(description == "Initial")
        $q: Quiz()
        exists Question(id == 2, answer == "Não") from $q.getQuizInitial()
     then
        Conclusion c = new Conclusion(Conclusion.ANXIETY_AS_NORMAL_FACTOR);
        insert(c);
        System.out.println("Conclusion:"+c);
 end


