package org.meia;
// package must be defined in packages from kmodule.xml file

//list any import classes here.
import org.meia.model.Conclusion;
import org.meia.model.QuizInitial;
import org.meia.model.Question;

//declare any global variables here

query "Conclusions"
	$conclusion : Conclusion()
end

rule "r1"
when
    $q : QuizInitial()
    exists Question(id == 1, answer == "Sim")
    exists Question(id == 2, answer == "Sim")
then
    Conclusion c = new Conclusion(Conclusion.ANXIETY_AS_NORMAL_FACTOR);
        		insert(c);
end

rule "Diagnóstico de  Ansiedade"
when
    $q : QuizInitial()
    exists Question(id == 3, answer == "Não")
then
    Conclusion c = new Conclusion(Conclusion.ANXIETY_AS_NORMAL_FACTOR);
    		insert(c);
end

rule "unknown"
	when
		not Conclusion()
	then
		Conclusion c = new Conclusion(Conclusion.UNKNOWN);
		insert(c);
end

